<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h3>Books</h3>
    <p class="lead">Total: <%= @books.count%></p>
  <hr class="my-4">
  <%= link_to 'New Book', new_book_path, class:"btn btn-secondary" %>
</div>

<div class="container">
<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col" colspan="3">Notes</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th><%= book.title %></th>
        <th><%= book.notes.count %></th>
        <th><%= link_to 'Show', book %></th>
        <th><%= link_to 'Edit', edit_book_path(book) %></th>
        <th><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></th>
        <% if book.notes.count > 0 %>
        <th><%= link_to 'Export', export_book_path(book.id), target: '_blank' %></th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>